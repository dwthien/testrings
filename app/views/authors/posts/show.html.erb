<% provide(:page_title, @post.title) %>
<% provide(:author, 'active') %>

<div class="row">
  <%= link_to 'Edit', edit_authors_post_path(@post), class: 'btn btn-sm btn-warning' %>
  <%= link_to 'Remove', authors_post_path(@post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
  <%= link_to 'Back', authors_posts_path, class: 'btn btn-sm btn-info' %>
</div>

<div class="row">
  <div class="col-md-1 col-lg-2">
    
  </div>
  <div class="col-md-10 col-lg-8 text-center">
    <h1><%= @post.title %></h1>
    <h5><%= @post.display_day_published %></h5>
    <%= @post.body.html_safe %>
    <img id="image" src="/uploads/<%= @post.id%>/untitled.1.jpg" width="<%= @post.width%>" height="<%= @post.height%>" />
  </div>
  <script>
    $(function(){ // when DOM ready
      var check = false;
      $('#image').mouseover(function() {
        if (check == false)
        {
          reel();
          check = true;
        }
      });
      var reel = function() {
        $('#image').reel({
          images:      '/uploads/<%= @post.id%>/untitled.#.jpg',
          frames:      '<%= @post.frames%>',
          loops:       true,
          speed:       '<%= @post.speed%>',
          cw:          true,
        });
      }
    });
  </script>
</div>